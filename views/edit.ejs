<!-- View page for editing a specific cohort -->
<%- include('./partials/header') %>
<form method="POST" action="/cohorts/<%= cohorts.id %>" id="form">
  <h1>Edit Cohort</h1>
  <input type="hidden" name="_method" value="PATCH" />
  <div class="form-group">
    <textarea class="form-control" name="imageUrl" rows="1"><%= cohorts.imageUrl %></textarea>
  </div>
  <br>
  <div class="form-group">
    <textarea class="form-control" name="name" rows="1"><%= cohorts.name %></textarea>
  </div>
  <br>
  <div class="form-group">
    <textarea class="form-control" name="members" rows="4"><%= cohorts.members %></textarea>
  </div>
  <br>
  <input type="submit" class="btn btn-outline-success" value="Submit" />
</form>
<%- include('./partials/footer') %>